# This program determines if a bonus should be awarded 

 

# The main function 

def main(): 

    print('Welcome to the program') 

    monthlySales = getSales()  # gets sales 

    isBonus(monthlySales) 

    isDayOff(monthlySales) 

     

# Gets the monthly sales 

def getSales(): 

    monthlySales = float(input('Enter the monthly sales $')) 

    return monthlySales 

 

# Determines whether or not a bonus is awarded 

def isBonus(monthlySales): #in brackets calls another variable from another module 

    if monthlySales >= 100000: # Find code to call monthlySales module for comparison 

        print('Congratulations! You have earned a bonus of $5,000!') 

 

# Determines whether or not a day off is awarded 

def isDayOff(monthlySales): 

    if monthlySales >= 90000:  

        print('Congratulations! All employees will get a day off.') 

 

# calls main 

main() 
