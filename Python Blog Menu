all_posts = []

def menu():
    repeat = True
    while repeat == True:
        print("--Python Blog--")
        print("1. Add a post")
        print("2. View posts")
        print("3. Exit")

        choice = input("Your selection: ")

        if choice =="1":
            get_post()
        elif choice == "2":
            show_posts()
        elif choice == "3":
            print("Exiting.")
        else:
            print("That is an invalid selection.")

def get_post():
    # all_posts = []
    post = str(input('Write your post below: \n'))
    all_posts.append(post)
    new_post = (input('Would you like to write another post? For yes, press 1: '))
    while new_post == '1':
        post = str(input('Write your post below: \n'))
        all_posts.append(post)
        new_post = (input('Would you like to write another post? For yes, press 1. If not, press 2: '))

def show_posts():
    print('Your Posts:\n', all_posts)


menu()
